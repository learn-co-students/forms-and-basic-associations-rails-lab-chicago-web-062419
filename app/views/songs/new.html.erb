<h1>Create a Song</h1>

<%= form_for @song do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
    <br>
    
    <%= f.label :genre %>
    <%= f.collection_select :genre_id, @genres, :id, :name, prompt: true %>
    <br>

    <%= f.label :notes %>
    <br>
    <input name="song[note_contents][]" type="text" id="song_notes_1"/>
    <br>
    <input name="song[note_contents][]" type="text" id="song_notes_2"/>
    <%= f.submit %>

<% end %>

