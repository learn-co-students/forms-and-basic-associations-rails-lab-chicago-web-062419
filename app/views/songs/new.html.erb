<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <br/>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

   <br/>
  <h3> Genre: <%= f.collection_select  :genre_id, Genre.all, :id, :name %> </h3>

  <br/>

  <h3> Notes: <input name='song[note_contents][]' id='song_notes_1'> </h3>
  <br/> <br/>
  <input name='song[note_contents][]' id='song_notes_2'>
  <br/> <br/>
  <input name='song[note_contents][]' id='song_notes_3'>
  <br/> <br/>
  

  <%= f.submit %>
<% end %>


